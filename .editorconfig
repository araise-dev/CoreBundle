# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_size = 2

[*.tsx]
indent_size = 2

[*.ts]
indent_size = 2

[*.jsx]
indent_size = 2

[*.markdown]
trim_trailing_whitespace = false

[**.css]
indent_size = 2

[**.styl]
indent_size = 2

[**.less]
indent_size = 2

[**.json]
indent_size = 2

[composer.json]
indent_size = 4

[Makefile]
indent_style = tab

[Vagrantfile]
indent_size = 2
